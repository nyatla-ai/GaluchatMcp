{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "granularity": {
      "type": "string",
      "enum": ["admin", "estat", "jarl"],
      "default": "admin"
    },
    "points": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10000,
      "items": {
        "type": "object",
        "properties": {
          "ref": {
            "type": "string",
            "maxLength": 128,
            "pattern": "^[A-Za-z0-9._:-]{0,128}$"
          },
          "lat": {
            "type": "number",
            "multipleOf": 0.000001
          },
          "lon": {
            "type": "number",
            "multipleOf": 0.000001
          }
        },
        "required": ["lat", "lon"],
        "additionalProperties": false
      }
    }
  },
  "required": ["points"],
  "additionalProperties": false
}
