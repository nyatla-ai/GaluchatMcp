{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "samples": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10000,
      "items": {
        "type": "object",
        "properties": {
          "ref": {
            "type": "string",
            "maxLength": 128,
            "pattern": "^[A-Za-z0-9._:-]{0,128}$"
          },
          "area": { "type": "string" },
          "start": { "type": "string", "format": "date-time" },
          "end": { "type": "string", "format": "date-time" }
        },
        "required": ["area", "start", "end"],
        "additionalProperties": false
      }
    }
  },
  "required": ["samples"],
  "additionalProperties": false
}
