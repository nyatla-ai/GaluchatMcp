{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start_ts": {"type": "number"},
          "end_ts": {"type": "number"},
          "center": {
            "type": "object",
            "properties": {
              "lat": {"type": "number"},
              "lon": {"type": "number"}
            },
            "required": ["lat", "lon"],
            "additionalProperties": false
          },
          "duration_sec": {"type": "number"}
        },
        "required": ["start_ts", "end_ts", "center", "duration_sec"],
        "additionalProperties": false
      }
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "index": {"type": "number"},
          "reason": {
            "type": "string",
            "enum": ["INVALID_COORD", "INVALID_TIMESTAMP"]
          }
        },
        "required": ["reason"],
        "additionalProperties": false
      }
    }
  },
  "required": ["results", "errors"],
  "additionalProperties": false
}
