{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "granularity": {
      "type": "string",
      "enum": ["admin", "estat", "jarl"]
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ref": { "type": "string" },
          "lat": { "type": "number" },
          "lon": { "type": "number" },
          "ok": { "type": "boolean" },
          "payload": {
            "type": "object",
            "properties": {
              "code": { "type": "string" },
              "address": { "type": "string" }
            },
            "required": ["code", "address"],
            "additionalProperties": true
          }
        },
        "required": ["lat", "lon", "ok", "payload"],
        "additionalProperties": false
      }
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ref": { "type": "string" },
          "lat": { "type": "number" },
          "lon": { "type": "number" },
          "reason": {
            "type": "string",
            "enum": ["INVALID_COORD", "INVALID_REF", "INVALID_T", "API_ERROR", "RATE_LIMIT", "OUT_OF_COVERAGE"]
          }
        },
        "required": ["lat", "lon", "reason"],
        "additionalProperties": false
      }
    }
  },
  "required": ["granularity", "results", "errors"],
  "additionalProperties": false
}
