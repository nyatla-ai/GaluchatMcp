{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "granularity": {
      "type": "string",
      "enum": ["admin", "estat", "jarl"]
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ref": { "type": "string" },
          "success": { "type": "boolean" },
          "payload": {
            "type": "object",
            "properties": {
              "code": { "type": "string" },
              "address": { "type": "string" }
            },
            "required": ["code", "address"],
            "additionalProperties": true
          },
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string",
                "enum": ["INVALID_COORD", "API_ERROR", "RATE_LIMIT", "OUT_OF_COVERAGE", "INVALID_REF"]
              },
              "message": { "type": "string" }
            },
            "required": ["code", "message"],
            "additionalProperties": false
          }
        },
        "required": ["success"],
        "oneOf": [
          {"required": ["payload"], "properties": {"success": {"const": true}}},
          {"required": ["error"], "properties": {"success": {"const": false}}}
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["granularity", "results"],
  "additionalProperties": false
}

