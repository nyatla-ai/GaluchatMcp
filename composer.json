{
  "name": "galuchat/mcp-server",
  "description": "Minimal MCP server for reverse geocoding",
  "require": {
    "php": "^8.2",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.4",
    "guzzlehttp/guzzle": "^7.0",
    "opis/json-schema": "^2.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  }
}
